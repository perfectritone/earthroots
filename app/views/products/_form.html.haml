= form_for @product do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :category
    %br
    = f.text_field :category
  %p
    = f.label :description
    %br
    = f.text_field :description
  %p
    = f.label :picture_url
    %br
    = f.text_field :picture_url
  %p
    = f.submit
