- title "Product"

%p
  %strong Name:
  = @product.name
%p
  %strong Category:
  = @product.category
%p
  %strong Description:
  = @product.description
%p
  %strong Picture:
  = @product.picture_url

%p
  = link_to "Edit", edit_product_path(@product)
  |
  = link_to "Destroy", @product, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", products_path
