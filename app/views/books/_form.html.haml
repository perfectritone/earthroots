= form_for @book do |f|
  = f.error_messages
  %p
    = f.label :author
    %br
    = f.text_field :author
  %p
    = f.label :year
    %br
    = f.number_field :year
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :page
    %br
    = f.number_field :page
  %p
    = f.submit
